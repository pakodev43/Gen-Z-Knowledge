<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Site Icon -->
    <link rel="icon" type="image/x-icon" href="/Images/site-icon.jpg">
    
    <!-- Author -->
    <meta name="author" content="Pakodev | pakodev.info@gmail.com">
    
    <!-- Title -->
    <title>Gen Z Academy</title>
    <meta name="description" content="An online academy to learn only good things">
    <meta name="keywords" content="College, Library, Courses, Blog, DigitalLibrary, Books, OnlineCourses, Articles, Technology, News, History, Medical, Philosophy, Startups, Academia, Knowledge, Mathematics, Mobiles, Computers, Gaming, Language, Programming, Computation, Designing, Business, Money, Innovations, Media, Cinema, App Launch, Hardware, ArtificialIntelligence, AI, ML, LLMs, Universities, Colleges, Schools, Past, Present, Future, Wisdom, Values">

    <!-- Style Sheets -->
    <link rel="stylesheet" href="/Styles/globals.css">
    <link rel="stylesheet" href="/Styles/header.css">
    <link rel="stylesheet" href="/Styles/footer.css">
    <link rel="stylesheet" href="/Styles/index.css">

    <!-- JavaScripts -->
    <script defer src="/Scripts/topNavToggle.js"></script>
    <script defer src="/Scripts/themeToggle.js"></script>

</head>
<body>

    <!-- Header -->
    <%- include('_header') %>

    <!-- Main -->
    <main class="main">

        <!-- Search Bar -->
        <form class="search-form" action="/courses/search" method="GET">
            <input class="search-bar" type="text" placeholder="Search for a course..." name="searchQuery">
            <button class="search-btn"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"/></svg></button>
        </form>


        <!-- Categories Bar -->
        <div class="categories-listdiv">
            <ul class="categories-list">
                <li><a href="/courses" class="category">All</a></li>
                <li><a href="/courses/category/News" class="category">News</a></li>
                <li><a href="/courses/category/Academia" class="category">Academia</a></li>
                <li><a href="/courses/category/Mathematics" class="category">Mathematics</a></li>
                <li><a href="/courses/category/Medical" class="category">Medical</a></li>
                <li><a href="/courses/category/Technology" class="category">Technology</a></li>
                <li><a href="/courses/category/Philosophy" class="category">Philosophy</a></li>
                <li><a href="/courses/category/Artificial Intelligence" class="category">Artificial Intelligence</a></li>
            </ul>
        </div>


        <% if (locals.course == 0) { %>
            <h3 class="not-found">No courses Found</h3>
        <% } %>


        <!-- Courses Section -->
        <div class="courses-sec">
            <% course.forEach(course => { %>
                <a href="/courses/<%= course.slug %>"><div class="course-box">
                    <div class="course-thumbnaildiv"><img src="/Assets/CourseThumbnails/<%= course.courseThumbnail %>" alt="<%= course.title %>" class="course-thumbnail"></div>
                    <div class="course-title"><%= course.title %></div>
                    <div class="course-detailsflex">
                        <p class="course-tutor">By <%= course.user.name %></p>
                        <p class="course-duration"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M464 256A208 208 0 1 1 48 256a208 208 0 1 1 416 0zM0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM232 120l0 136c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2 280 120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/></svg><%= course.duration %></p>
                    </div>
                </div></a>
            <% }) %>
        </div>

    </main>

    <!-- Footer -->
    <%- include('_footer') %>

</body>
</html>